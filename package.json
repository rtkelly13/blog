{
  "name": "tailwind-nextjs-starter-blog",
  "version": "1.1.0",
  "private": true,
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "start": "next-remote-watch ./data",
    "dev": "next dev --webpack",
    "build": "next build --webpack && node ./scripts/generate-sitemap && node ./scripts/generate-search.js && node ./scripts/generate-tag-rss.js",
    "serve": "next start",
    "analyze": "cross-env ANALYZE=true next build --webpack",
    "test:e2e": "playwright test",
    "test:e2e:watch": "playwright test --reporter=list",
    "test:update-snapshots": "playwright test --update-snapshots",
    "lint": "biome check .",
    "format": "biome format --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.23",
    "esbuild": "^0.27.2",
    "gray-matter": "^4.0.2",
    "image-size": "2.0.2",
    "kbar": "0.1.0-beta.48",
    "mdast-util-to-string": "^4.0.0",
    "mdx-bundler": "^10.1.1",
    "next": "^16.1.1",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "preact": "^10.5.13",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-katex": "^7.0.1",
    "rehype-prism-plus": "^2.0.1",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "remark-github-blockquote-alert": "^2.0.1",
    "remark-math": "^6.0.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.19",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@next/bundle-analyzer": "16.1.1",
    "@playwright/test": "^1.57.0",
    "@svgr/webpack": "^8.1.0",
    "@types/mdx": "^2.0.13",
    "@types/node": "^25.0.6",
    "@types/react": "^19.2.8",
    "@types/unist": "^3.0.3",
    "cross-env": "^10.1.0",
    "dedent": "^1.7.1",
    "file-loader": "^6.0.0",
    "globby": "11.0.3",
    "husky": "^9.1.7",
    "inquirer": "^8.1.1",
    "lint-staged": "^16.2.7",
    "next-remote-watch": "^2.0.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "unified": "^11.0.5"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx|json|css)": [
      "biome check --write"
    ]
  }
}
