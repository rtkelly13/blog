    "next": "^16.1.1",
    "next-themes": "^0.0.14",
    "postcss": "^8.5.6",
    "preact": "^10.5.13",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "reading-time": "1.3.0",
